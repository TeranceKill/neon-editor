<div class="editor {{selectedColor}}">
    <Editor::ColorPicker
        @colors={{this.editor.colors}}
        @selectedColor={{selectedColor}}
        @onColorChange={{this.setSelectedColor}}>
    </Editor::ColorPicker>
    <textarea
        value={{@value}}
        {{on "keyup" this.setInputValue}}
        placeholder="Enter some text..."
        spellcheck="false"
        id="area">
    </textarea>
    {{#if @value}}
        <button class="clear" {{on "click" this.onClearClicked}}>
            {{svg-jar "delete-sweep-24"}}   
        </button>
    {{/if}}
    <Editor::KeyData
        @value={{@value}}
        @selectedColor={{selectedColor}}>
    </Editor::KeyData>
</div>